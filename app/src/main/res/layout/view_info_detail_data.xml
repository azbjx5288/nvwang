<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#F6F7F9"
    android:paddingBottom="10dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@color/mybag_color"
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="200dp">

<!--        <android.support.v7.widget.Toolbar-->
<!--            android:id="@+id/toolbar"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="?attr/actionBarSize">-->

<!--            <TextView-->
<!--                android:id="@+id/toolbar_title"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="center"-->
<!--                android:text="个人中心"-->
<!--                android:textColor="#fff"-->
<!--                android:textSize="16sp"-->
<!--                android:textStyle="bold" />-->
<!--        </android.support.v7.widget.Toolbar>-->

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="180dp"
           android:orientation="horizontal"
           android:gravity="center"
           android:paddingLeft="20dp"
            android:paddingRight="20dp"
           >
           <de.hdodenhof.circleimageview.CircleImageView
               android:layout_centerHorizontal="true"
               android:id="@+id/iv_avatar"
               android:layout_width="70dp"
               android:layout_height="70dp"
               android:focusable="true"
               android:focusableInTouchMode="true"
               android:src="@mipmap/logo" />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center|left"
               android:paddingLeft="10dp"
               android:paddingRight="10dp"
               android:orientation="vertical">
               <TextView
                   android:layout_centerHorizontal="true"
                   android:layout_below="@id/iv_avatar"
                   android:id="@+id/tv_name"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:ellipsize="end"
                   android:singleLine="true"
                   android:text="昵称"
                   android:textColor="@color/white" />
               <TextView
                   android:layout_centerHorizontal="true"
                   android:layout_below="@id/tv_name"
                   android:id="@+id/tv_id"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="4dp"
                   android:text="会员号"
                   android:lines="2"
                   android:textColor="@color/white" />
           </LinearLayout>
       </LinearLayout>




        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/broder_mine_bg"
            android:orientation="horizontal"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/zuans"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    />

                <TextView
                    android:id="@+id/zuannum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="您当前还有150个"
                    />
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/zuans"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/broder_mine_bottom_bg"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/av_vip"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="视频会员"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_av_vip_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/text_black"
            android:textSize="14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="到期"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:background="#ffffff"

        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/vip"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="直播会员"
            android:textColor="#1E1D1D"
            android:textStyle="bold"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_vip_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/text_black"
            android:textSize="14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="到期"
            />
    </LinearLayout>

</LinearLayout>
