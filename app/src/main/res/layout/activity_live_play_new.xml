<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <SurfaceView
            android:id="@+id/surface"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:paddingLeft="5dp"
            android:background="@drawable/live_title_bag"
            android:gravity="center"
            android:layout_margin="15dp"
            >
            <com.ty8box.blings.view.MyImages
                android:id="@+id/image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="@dimen/dp_10"
                android:scaleType="fitXY"
                android:src="@mipmap/vip"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="@dimen/dp_10"
                >
                <TextView
                    android:id="@+id/livetitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_12"
                    android:maxLines="1"
                    android:text="直播LIVE"
                    />
                <TextView
                    android:id="@+id/num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_12"
                    android:maxLines="1"
                    android:text="111111"
                    />
            </LinearLayout>

        </LinearLayout>


        <ImageView
            android:id="@+id/imagegif"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="right"
            android:layout_margin="15dp"/>


        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/broder_ad"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textColor="#fff"
            android:text="1111111111"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#24A3E3"
            android:textSize="14dp"
            android:text="您还有8秒试看时间"
            android:hint="您还有8秒试看时间"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/dp_10"
            android:visibility="gone"
            />


            <ImageButton
                android:id="@+id/sc"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerInside"
                android:src="@mipmap/sc"
                android:layout_gravity="left|bottom"
                android:layout_marginBottom="20dp"
                android:background="@null"
                android:layout_marginLeft="50dp"
                />
            <ImageButton
                android:id="@+id/gb"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerInside"
                android:src="@mipmap/gb"
                android:layout_gravity="right|bottom"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="20dp"
                android:background="@null"
                />


    </FrameLayout>


</android.support.constraint.ConstraintLayout>